<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.mx.lb.androidcircleimage.widget.RoundImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_qiqiu"
            android:layout_margin="10dp"
            android:src="@mipmap/qiqiu"
            />

        <com.mx.lb.androidcircleimage.widget.RoundImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:src="@mipmap/aa"
            />

        <com.mx.lb.androidcircleimage.widget.RoundImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@mipmap/icon"/>

        <com.mx.lb.androidcircleimage.widget.RoundImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/id_meinv"
            android:src="@mipmap/aa"
            app:borderRadius="20dp"
            app:type="round"/>

        <com.mx.lb.androidcircleimage.widget.RoundImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@mipmap/icon"
            app:borderRadius="40sp"
            app:type="round"/>

        <com.mx.lb.androidcircleimage.widget.RoundImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@mipmap/qiqiu"
            app:borderRadius="60dp"
            app:type="round"/>

        <com.mx.lb.androidcircleimage.widget.RoundImageViewByXfermode
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@mipmap/aa"/>


    </LinearLayout>



</ScrollView>